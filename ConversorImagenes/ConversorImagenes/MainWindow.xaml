        <Image x:Name="img_muestra" HorizontalAlignment="Left" Height="283" Margin="230,64,0,0" VerticalAlignment="Top" Width="336"/>
        <Button x:Name="btn_Procesar" Content="Procesar" HorizontalAlignment="Left" Margin="230,418,0,0" VerticalAlignment="Top" Width="232" Height="28"/>
        <Button x:Name="btn_salir" Content="Salir" HorizontalAlignment="Left" Margin="491,418,0,0" VerticalAlignment="Top" Width="75" Click="btn_salir_Click" Height="28"/>
        <TextBox x:Name="txt_path" HorizontalAlignment="Left" Height="23" Margin="18,25,0,0" TextWrapping="Wrap" Text="Seleccionar Carpeta..." VerticalAlignment="Top" Width="385"/>
        <Button x:Name="btn_examinar" Content="Examinar" HorizontalAlignment="Left" Height="23" Margin="439,25,0,0" VerticalAlignment="Top" Width="127" Click="btn_examinarClick"/>
        <ListBox x:Name="lst_archivos" HorizontalAlignment="Left" Height="382" Margin="18,64,0,0" VerticalAlignment="Top" Width="191" SelectionChanged="lst_archivos_SelectionChanged"/>
        <Label x:Name="label" Content="Convertir todo a formato..." HorizontalAlignment="Left" Height="29" Margin="230,376,0,0" VerticalAlignment="Top" Width="165"/>
        <ComboBox x:Name="cmb_formatos" HorizontalAlignment="Left" Height="27" Margin="423,378,0,0" VerticalAlignment="Top" Width="143"/>

    </Grid>
</Window>
